<% include ../partials/header %>

    <h1 id="review">Add a Review!</h1>
    <div class="row">
        <div id="review-form">
            <form action="/reviews" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="text" placeholder="text">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="author" placeholder="your name">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-secondary btn-block">Submit</button>
                </div>
                <a href="/reviews">Go Back</a>
            </form> 
        </div>
    </div> 

